<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4"
    tools:context=".MainMenu.MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/multi_player_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_button_style"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/multiplayerString"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="@+id/daily_challenge_button"
            app:layout_constraintStart_toStartOf="@+id/daily_challenge_button"
            app:layout_constraintTop_toBottomOf="@+id/daily_challenge_button" />

        <Button
            android:id="@+id/daily_challenge_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_button_style"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/daily_challenge"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="@+id/single_player_button"
            app:layout_constraintStart_toStartOf="@+id/single_player_button"
            app:layout_constraintTop_toBottomOf="@+id/single_player_button" />

        <Button
            android:id="@+id/single_player_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:background="@drawable/round_button_style"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/singlePlayerString"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>